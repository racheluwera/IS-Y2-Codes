public class Array10 {
    public static void main(String[] args) {
  int[] Array ={34,23,12,45,67,89,234,26,10,30,43};
   int largest = Array[0];
for( int  i =0; i<11; i++){
    if ( Array[i]> largest){
        largest=Array[i];

        }
    
    }
System.out.println("largest number is"+ largest);
    }
}
    
